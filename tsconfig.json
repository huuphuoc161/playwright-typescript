{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "src/helper/types"],
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../tests-out"
